<div class="sidebar-left flex-initial lg:w-1/4">
  <div
    class="md:flex flex-col md:flex-row md:min-h-screen w-full conversations"
  >
    <div
      @click.away="open = false"
      class="
        flex flex-col
        w-full
        text-gray-700
        bg-white
        dark-mode:text-gray-200 dark-mode:bg-gray-800
        flex-shrink-0
      "
      x-data="{ open: false }"
    >
      <div
        class="
          flex-shrink-0
          py-4
          pl-3
          flex flex-row
          items-center
          justify-between
        "
      >
        <a
          href="javascript:void(0)"
          class="
            text-lg
            font-semibold
            tracking-widest
            text-gray-900
            uppercase
            rounded-lg
            dark-mode:text-white
            focus:outline-none focus:shadow-outline
          "
          >chats</a
        >
        <button
          class="
            rounded-lg
            md:hidden
            rounded-lg
            focus:outline-none focus:shadow-outline
          "
          @click="open = !open"
        >
          <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
            <path
              x-show="!open"
              fill-rule="evenodd"
              d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z"
              clip-rule="evenodd"
            ></path>
            <path
              x-show="open"
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path>
          </svg>
        </button>
      </div>
      <style>
        .lists {
          overflow-x: auto;
        }
        .lists::-webkit-scrollbar {
          width: 5px;
          height: 5px;
          border-radius: 15px;
        }

        .lists::-webkit-scrollbar-track {
          background-color: #eee;
        }

        .lists::-webkit-scrollbar-thumb {
          background: #ddd;
          border-radius: 15px;
        }

        .h-main::-webkit-scrollbar {
          display: none;
        }
      </style>
      <form
        onsubmit="event.preventDefault()"
        autocomplete="off"
        class="mt-2 relative"
      >
        <input
          type="search"
          placeholder="Search..."
          id="search"
          name="search"
          class="
            w-full
            bg-white
            rounded-full
            bg-gray-100
            text-base
            outline-none
            text-gray-700
            py-1
            pl-8
            px-3
            leading-8
            transition-colors
            duration-200
            ease-in-out
          "
        />
        <span
          class="zmdi zmdi-search absolute left-3 text-gray-400 top-2.5"
          style="font-size: 20px"
        ></span>
      </form>
      <hr class="mt-2" />
      <div
        class="h-main"
        style="max-height: calc(100vh - 200px); overflow-y: auto"
      >
        <h3 class="text-md font-bold text-gray-500 mt-2 mb-2">
          Favourates <i class="zmdi zmdi-heart"></i>
        </h3>
        <div class="lists mb-2 w-full flex" id="story_list">
          <% chats.forEach(function(chat,index){ %> <% if(index < 15){ %>

          <div
            class="
              item-<%=
              index
              %>
              mr-2
              flex flex-col
              items-center
              justify-center
            "
          >
            <div class="relative h-16 w-16 min-w-16">
              <img
                class="
                  inline-block
                  h-full
                  w-full
                  rounded-full
                  ring-2 ring-white
                "
                src="<%= chat.sender._id == userId ? chat.receiver.picture : chat.sender.picture; %>"
                alt=""
              />

              <div
                class="
                  absolute
                  border-2 border-white
                  h-4
                  w-4
                  <%
                  if(chat.sender._id
                  ==
                  userId){
                  %>
                  <%=
                  chat.receiver.online
                  ?
                  'bg-green-500'
                  :
                  'bg-gray-100'
                  %>
                  <%
                  }else
                  {
                  %>
                  <%=
                  chat.sender.online
                  ?
                  'bg-green-500'
                  :
                  'bg-gray-200'
                  %>
                  <%
                  }
                  %>
                  rounded-full
                "
                style="right: 0; bottom: 0"
              >
                .
              </div>
            </div>
            <h5
              style="max-width: 50px"
              class="
                n
                text-gray-400 text-sm
                truncate
                overflow-ellipsis overflow-hidden
                max-w-6
              "
            >
              <%= chat.sender._id == userId ? chat.receiver.name :
              chat.sender.name; %>
            </h5>
          </div>

          <% } }) %>
        </div>
        <nav
          :class="{'block': open, 'hidden': !open}"
          class="flex-grow md:block pb-4 md:pb-0 mt-2"
          id="c_list"
        >
          <% chats.forEach(function(chat,index){ %> <% if(index == 0) {%>
          <script>
            window.receiverId =
              "<%= chat.sender._id == userId ? chat.receiver._id : chat.sender._id; %>";
            window.conversationId = "<%= chat.conversationId %>";
          </script>
          <% } var currentUnread = unreadCount[index].split('-'); %>

          <a
          
            onclick="changeActiveUser('<%= chat.sender._id == userId ? chat.receiver._id : chat.sender._id;  %>', '<%= chat.conversationId %>', this)"
            class="
              block
              px-4
              py-3
              text-sm
              font-semibold
              text-gray-900
              bg-transparent
              dark-mode:bg-transparent
              dark-mode:hover:bg-gray-600
              dark-mode:focus:bg-gray-600
              dark-mode:focus:text-white
              dark-mode:hover:text-white
              dark-mode:text-gray-200
              hover:text-gray-900
              focus:text-gray-900
              hover:bg-gray-100
              focus:bg-gray-100 focus:outline-none focus:shadow-outline
              <%= chat.conversationId %>
            "
            href="#"
          >
            <div class="flex items-center -space-x-1 overflow-hidden">
              <div class="relative h-12 w-12 min-w-12">
                <img
                  class="
                    inline-block
                    h-full
                    w-full
                    rounded-full
                    ring-2 ring-white
                  "
                  src="<%= chat.sender._id == userId ? chat.receiver.picture : chat.sender.picture; %>"
                  alt=""
                />

                <div
                  class="
                    absolute
                    border-2 border-white
                    h-4
                    w-4
                    <%
                    if(chat.sender._id
                    ==
                    userId){
                    %>
                    <%=
                    chat.receiver.online
                    ?
                    'bg-green-500'
                    :
                    'bg-gray-100'
                    %>
                    <%
                    }else
                    {
                    %>
                    <%=
                    chat.sender.online
                    ?
                    'bg-green-500'
                    :
                    'bg-gray-200'
                    %>
                    <%
                    }
                    %>
                    rounded-full
                  "
                  style="right: 0; bottom: 0"
                >
                  .
                </div>
              </div>
              <div class="pl-3 flex flex-col flex-1">
                <div class="flex flex-row items-center justify-between w-full">
                  <div class="font-bold text-gray-500 text-lg capitalize conid">
                    <%= chat.sender._id == userId ? chat.receiver.name :
                    chat.sender.name; %>
                  </div>
                  <div class="text-gray-400 uppercase text-sm">
                    <% d = chat.receiver.last_active; var date = new
                    Date(parseInt(d)).toLocaleTimeString(); a =
                    date.substring(date.length - 2); b = date.substring(0,
                    date.length - 6); tim= b+ ' '+ a %> <%= tim %>
                  </div>
                </div>
                <div class="flex items-start justify-between">
                  <div
                    class="
                      text-gray-500
                      truncate
                      mssg
                      overflow-ellipsis overflow-hidden
                    "
                    style="width: 50%; max-width: 150px"
                  >
                    <%= chat.sender._id == userId ? 'you: '+chat.message :
                    chat.message %>
                  </div>

                  <span
                    class="
                      bg-red-300
                      text-gray-700 text-sm
                      px-1
                      rounded-full
                      unseen
                    "
                  >
                    <%= currentUnread[1] > 0? currentUnread[1] : '' %>
                  </span>
                </div>
              </div>
            </div>
          </a>
          <% }) %>
        </nav>
      </div>
    </div>
  </div>
  <script>
    const target = document.querySelector("#story_list");

    target.addEventListener("wheel", (event) => {
      const toLeft = event.deltaY < 0 && target.scrollLeft > 0;
      const toRight =
        event.deltaY > 0 &&
        target.scrollLeft < target.scrollWidth - target.clientWidth;

      if (toLeft || toRight) {
        event.preventDefault();
        target.scrollLeft += event.deltaY;
      }
    });

    var arr = document.querySelectorAll(".desktop #c_list > a");
    function sear(e) {
      let string = e.target.value.toLowerCase();
      arr.forEach((item, i) => {
        var itext = item.querySelector(".conid").innerText.trim().toLowerCase();
        if (itext.startsWith(string)) {
          item.classList.remove("hidden");
        } else {
          item.classList.add("hidden");
        }
      });
    }

    document.querySelector(".desktop #search").addEventListener("input", sear);
  </script>
</div>
